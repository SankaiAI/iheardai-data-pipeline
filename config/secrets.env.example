# Data Pipeline Environment Variables
# Copy this file to .env and fill in the actual values

# Kafka Configuration
KAFKA_USER=svc-data-pipeline
KAFKA_PASSWORD=your_kafka_password_here

# PostgreSQL Configuration
POSTGRES_HOST=pg.iheardai.internal
POSTGRES_PORT=25060
POSTGRES_DB=iheardai_analytics
POSTGRES_USER=pipeline_user
POSTGRES_PASSWORD=your_postgres_password_here

# Redis Configuration
REDIS_HOST=redis.iheardai.internal
REDIS_PORT=25061
REDIS_PASSWORD=your_redis_password_here

# DigitalOcean Spaces Configuration
SPACES_ACCESS_KEY=your_spaces_access_key_here
SPACES_SECRET_KEY=your_spaces_secret_key_here

# Marketo API Configuration
MARKETO_BASE_URL=https://123-ABC-456.mktorest.com
MARKETO_CLIENT_ID=your_marketo_client_id_here
MARKETO_CLIENT_SECRET=your_marketo_client_secret_here

# Monitoring Configuration
PUSHGATEWAY_URL=http://pushgateway.monitoring.svc.cluster.local:9091
SENTRY_DSN=your_sentry_dsn_here

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# iheardAI Frontend Configuration
FRONTEND_API_URL=https://api.iheardai.com
FRONTEND_WEBHOOK_SECRET=your_frontend_webhook_secret_here

# Text Agent Server Configuration
TEXT_AGENT_API_URL=https://text-agent.iheardai.com
TEXT_AGENT_API_KEY=your_text_agent_api_key_here

# Kubernetes Configuration (if running outside cluster)
KUBECONFIG_PATH=/path/to/your/kubeconfig

# Environment Settings
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=false

# Service Discovery
SERVICE_DISCOVERY_ENABLED=true
CONSUL_URL=http://consul.service.consul:8500

# Feature Flags
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PII_REDACTION=true
ENABLE_AUDIT_LOGGING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=iheardai-pipeline-backups
BACKUP_RETENTION_DAYS=30